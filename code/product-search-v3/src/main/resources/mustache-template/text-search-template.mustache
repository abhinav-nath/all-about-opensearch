{
  "from": {{from}},
  "size": {{size}},
  "query": {
    "bool": {
      "filter": [
        {
          "exists": {
            "field": "name"
          }
        }
      ],
      "should": [
        {
          "multi_match": {
            "fields": [
              "fullTextBoosted^10",
              "fullText^2"
            ],
            "type": "cross_fields",
            "query": "{{queryString}}"
          }
        },
        {
          "match": {
            "code": {
              "query": "{{queryString}}",
              "boost": {{codeBoost}}
            }
          }
        },
        {
          "wildcard": {
            "code": {
              "wildcard": "*{{queryString}}*",
              "case_insensitive": true,
              "boost": {{wildcardBoost}}
            }
          }
        }
      ],
      "minimum_should_match": "1"
    }
  },
  "post_filter": {
    "bool": {
      "filter": [
        {{#filters}}
          {
            "bool": {
              "should": [
                {
                  "terms": {
                  "{{code}}": {{#toJson}}values{{/toJson}}
                  }
                }
              ]
            }
          }
          {{^last}},{{/last}}
        {{/filters}}
      ]
    }
  },
  "version": true,
  "aggregations": {
    {{#aggregations}}
      {{^hasSubAggregation}}
        "{{code}}": {
          "terms": {
            "field": "{{field}}",
            "size": {{facetsSize}},
            "min_doc_count": 1
          }
        }
      {{/hasSubAggregation}}
      {{#hasSubAggregation}}
        "{{code}}": {
          "filter": {
            "bool": {
              "filter": [
                {{#aggregationFilters}}
                  {
                    "terms": {
                    "{{code}}": {{#toJson}}values{{/toJson}}
                    }
                  }
                  {{^last}},{{/last}}
                {{/aggregationFilters}}
              ]
            }
          },
          "aggregations": {
            "{{code}}": {
              "terms": {
                "field": "{{field}}",
                "size": {{facetsSize}},
                "min_doc_count": 1
              }
            }
          }
        }
      {{/hasSubAggregation}}
      {{^last}},{{/last}}
    {{/aggregations}}
  }
}